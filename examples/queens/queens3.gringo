#hide.
#show q/2. 

queens(10).
diags(Q * 2 - 1) :- queens(Q).

d(1..Q) :- queens(Q).
diag(1..D) :- diags(D).

diagX(X,Y,X - Y + Q) :- queens(Q), d(X), d(Y).
diagY(X,Y,X + Y - 1) :- d(X), d(Y).

% exactly 1 queen in each row/col
1 { q(X,Y) : d(Y) } 1 :- d(X).
1 { q(X,Y) : d(X) } 1 :- d(Y).

% at most 1 queen on each diagonal
{ q(X,Y) : diagX(X,Y,D) } 1 :- diag(D).
{ q(X,Y) : diagY(X,Y,D) } 1 :- diag(D).

